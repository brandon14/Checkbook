<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingLeft="@dimen/listview_margin_horizontal"
    android:paddingRight="@dimen/listview_margin_horizontal"
    android:paddingTop="@dimen/listview_margin_vertical"
    android:paddingBottom="@dimen/listview_margin_vertical">

    <TextView
        android:id="@+id/textview_transfer_listview_transfer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/primary_text_default_material_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/textview_transfer_listview_transfer_amount" />

    <TextView
        android:id="@+id/textview_transfer_listview_transfer_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/secondary_text_default_material_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/textview_transfer_listview_transfer_name" />

    <TextView
        android:id="@+id/textview_transfer_listview_transfer_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/secondary_text_default_material_light"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>