<resources>
    <!-- Application themes Light and Dark -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <!-- Base app theme -->
    <style name="AppTheme.Base"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary Material color -->
        <item name="colorPrimary">@color/primary</item>
        <!-- Darker version of primary Material color -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Accent color per Material guidelines -->
        <item name="colorAccent">@color/accent</item>
        <!-- Using toolbar so we set windowNoTitle -->
        <item name="android:windowNoTitle">true</item>
        <!-- Disable actionbar because we are using the toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Title text -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Title color in AppCompat.Light  -->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <!-- Menu text-->
        <item name="actionMenuTextColor">@android:color/white</item>
        <!-- Overflow -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!-- This will change drawer icon -->
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="ToolbarPopupStyle" parent="@style/ThemeOverlay.AppCompat.Light">

    </style>

    <!-- Style for the white drawer arrow icon in the toolbar -->
    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!-- Animate the arrow -->
        <item name="spinBars">true</item>
        <!-- We need a white arrow -->
        <item name="color">@android:color/white</item>
    </style>

    <style name="RecyclerViewStyle" parent="Widget.AppCompat.Light.ListView.DropDown">

    </style>
</resources>
